{% extends 'layouts/base.html.twig' %}

{% block title %}Hello AccountController!{% endblock %}

{% block body %}
<div class="">
    <h1>Profile</h1>
    <img src="{{ app.user.gravatar}}" alt="">
    <p> <small> Account created on {{ app.user.createdAt|date('d/m/Y')}}</small> </p>
    <p> {{app.user.fullName}} </p>
    <p>
        <a href="{{ path('app_account_edit')}}">Edit Account</a> |
        <a href="{{ path('app_account_change_password')}}">Change Password</a>
    </p>

</div>
{% endblock %}