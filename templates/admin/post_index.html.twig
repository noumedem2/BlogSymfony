{% extends 'layouts/base.html.twig' %}

{% block title "Administration des Articles" %}

{% block body %}

{% if posts|length > 0 %}
<h1 class="mb-4 text-center text-muted">{{ pluralize(posts|length, 'Post') }}</h1>


<table class="table table-striped table-inverse">
    <thead class="thead-inverse">
        <tr>
            <th>Numero</th>
            <th>Title</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for row in posts|batch(3) %}
        {% for post in row %}

        <tr>
            <td>{{ post.title}}</td>
            <td>{{post.title }}</td>
            <td>
                <a class="btn btn-secondary" href="{{ path('app_admin_post_edit',{ id: post.id}) }}">Editer</a>
                {{ include('admin/post/forms/_delete_form.html.twig') }}
            </td>
        </tr>
        {% endfor %}
        {% endfor %}
    </tbody>
</table>
{% else %}

<h1 class="text-center">Vous avez creer Aucun Article</h1>

{% endif %}
{% endblock %}